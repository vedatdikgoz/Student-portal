@model List<User>

@{
    ViewData["Title"] = "Students";
    Layout = "~/Areas/Teacher/Views/Shared/_TeacherLayout.cshtml";
}

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Akademisyen Öğrenciler</title>
    <link rel="stylesheet" href="/customcss/bootstrap/css/bootstrap.min.css">
    <link href="/customcss/fonts/circular-std/style.css" rel="stylesheet">
    <link rel="stylesheet" href="/customcss/libs/css/style.css">
    <link rel="stylesheet" href="/customcss/fonts/fontawesome/css/fontawesome-all.css">
</head>

<br />
<table class="table table-bordered table-striped">
    <tr class="bg-primary">
        <td>Kullanıcı Adı</td>
        <td>Ad</td>
        <td>Soyad</td>
        <td>Eposta</td>
        <td></td>
    </tr>
    @if (Model.Count == 0)
    {
        <tr>
            <td colspan="3">Hiç bir öğrenci yoktur.</td>
        </tr>
    }
    else
    {
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td><a class="btn btn-outline-info btn-sm" asp-controller="Admin" asp-action="GetChosenCourses" asp-route-userId="@user.Id">Not Ekle</a></td>
            </tr>
        }
    }
</table>

